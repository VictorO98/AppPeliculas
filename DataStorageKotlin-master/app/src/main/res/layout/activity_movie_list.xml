<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controladores.MovieListActivity"
        android:background="@color/colorBackGround">

    <ListView
            android:layout_width="406dp"
            android:layout_height="638dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/listMovie"
            android:clickable="true" android:layout_marginTop="88dp" app:layout_constraintHorizontal_bias="0.4"
            android:layout_marginBottom="5dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="@string/button_agregar"
            android:layout_width="153dp"
            android:layout_height="52dp"
            android:onClick="movies"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorPrimary"
            android:background="@drawable/rounder_corner_button"
            android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="161dp"
            android:layout_marginStart="161dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp"
            android:layout_marginRight="162dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/listMovie"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>